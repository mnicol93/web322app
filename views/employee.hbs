<div class="row">
    <div class="col-md-12">
            <h2>{{viewData.employee.firstName}} {{ viewData.employee.lastName}} - 
                Employee: {{ viewData.employee.employeeNum}}</h2>
                <hr />
            <form method="post" action="/employee/update">
            <fieldset>
                <input type="hidden" name="employeeNum" value={{viewData.employee.employeeNum}}>
            <legend>Personal Information</legend>
                <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input class="form-control" id="firstName" name="firstName" type="text" value="{{ viewData.employee.firstName}}" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="lastName">Last Name:</label>
                    <input class="form-control" id="lastName" name="lastName" type="text" value="{{ viewData.employee.lastName}}" />
                </div>
            </div>
                </div>

                <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="text" class="form-control" id="email" name="email" value={{viewData.employee.email}}>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="SSN">Social Security Number:</label>
                    <input type="text" class="form-control" id="SSN" name="SSN" value={{viewData.employee.SSN}} readonly>
                </div>
            </div>
                </div>
                <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="addressStreet">Address (Street):</label>
                    <input type="text" class="form-control" id="addressStreet" name="addressStreet" value="{{viewData.employee.addressStreet}}">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="addressCity">Address (City):</label>
                    <input type="text" class="form-control" id="addressCity" name="addressCity" value="{{viewData.employee.addresCity}}">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="addressState">Address (State):</label>
                    <input type="text" class="form-control" id="addressState" name="addressState" value={{viewData.employee.addressState}}>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="addressPostal">Address (Zip Code):</label>
                    <input type="text" class="form-control" id="addressPostal" name="addressPostal" value={{viewData.employee.addressPostal}}>
                </div>
            </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Company Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="isManager">Manager:</label>
                            <input class="form-control" type="checkbox" id="isManager" name="isManager" 
                            {{#if viewData.employee.isManager}}
                                checked
                            {{/if}}
                            >
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="employeeManagerNum">Employee's Manager Number:</label>
                            <input class="form-control" type="text" id="employeeManagerNum" name="employeeManagerNum" value={{viewData.employee.employeeManagerNum}}>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Status:</label>
                            <br>
                            <label class="checkbox-inline">
                                <input class="form-control" type="radio" id="statusFT" name="statusFT" 
                                {{#equal viewData.employee.status "Full Time"}}
                                    checked
                                {{/equal}}
                                 value={{viewData.employee.status}}>
                            Full Time
                            </label>
                            <label class="checkbox-inline">
                                <input class="form-control" type="radio" id="statusPT" name="statusPT" 
                                {{#equal viewData.employee.status "Part Time"}}
                                    checked
                                {{/equal}}
                                value={{viewData.employee.status}}>
                            Part Time
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="department">Department</label>
                            {{!-- <select name="department" id="department" class="form-control">
                                <option value="1" {{#equal viewData.employee.department "1"}}selected{{/equal}}>Create Services</option>
                                <option value="2" {{#equal viewData.employee.department "2"}}selected{{/equal}}>Product Development</option>
                                <option value="3" {{#equal viewData.employee.department "3"}}selected{{/equal}}>Marketing</option>
                                <option value="4" {{#equal viewData.employee.department "4"}}selected{{/equal}}>Strategic Planning</option>
                                <option value="5" {{#equal viewData.employee.department "5"}}selected{{/equal}}>Accounting</option>
                                <option value="6" {{#equal viewData.employee.department "6"}}selected{{/equal}}>Human Resources</option>
                                <option value="7" {{#equal viewData.employee.department "7"}}selected{{/equal}}>Quality Analysis</option>
                            </select> --}}
                            {{#if viewData.departments}}
                                <select class="form-control" name="department" id="department">
                                    {{#each viewData.departments}}
                                        <option value="{{departmentId}}" {{#if selected}} selected {{/if}} >{{departmentName}} </option>
                                    {{/each}}
                                </select>
                            {{else}}
                                <div>No Departments</div>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="hireDate">Hire Date</label>
                            <input class="form-control" id="hireDate" name="hireDate" type="text" value={{viewData.employee.hireDate}} readonly>
                        </div>
                    </div>
                </div>
            </fieldset>
                <hr />
                <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
                <br>
                <br>
                <br>
            </form>
    </div>
</div>