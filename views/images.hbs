<div class="row">
    <div class="col-md-12">
        <h2><a href="/images/add" class="btn btn-success pull-right">Add new Image</a>Images</h2>
        <hr/>
    </div>
    {{#each items}}
        <div class="col-md-4">
            <img src="/images/uploaded/{{this}}" alt="Image{{this}}" class="img-responsive img-thumbnail">
        </div>
    {{else}}
        <div class="col-md-12 text-center">
            <strong>No Images Available</strong>
        </div>
    {{/each}}
</div>
